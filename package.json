{
  "private": true,
  "name": "endostat",
  "version": "1.3.8",
  "description": "Endoscopy Reporting System",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Enoch-Lugobwa/endo-stat"
  },
  "author": "Detale Technologies Limited",
  "license": "ISC",
  "build": {
    "appId": "co.ug.detale.endoscopy",
    "productName": "Endo-Stat",
    "copyright": "Copyright Â© 2025 Detale Technologies Limited",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/.gitignore",
      "!**/.eslintrc.js"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "Enoch-Lugobwa",
      "repo": "endo-stat",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.medical"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Medical"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^8.7.0",
    "cropperjs": "^1.5.13",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^5.3.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.28",
    "node-fetch": "^2.6.7",
    "node-machine-id": "^1.1.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^23.3.13",
    "electron-builder": "^23.6.0"
  }
}
